<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Anuncios</title>
    <link rel="stylesheet" type="text/css" href="/webjars/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body>
<div class="container-md">
    <div class="card">
        <div class="card-header">
            Anuncios
            <div class="float-md-end">
                <a class="btn btn-primary" href="/adverts/create/get">Nuevo por GET</a>
                <a class="btn btn-primary" href="/adverts/create/post">Nuevo por POST</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Asunto</th>
                    <th scope="col">Comentario</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {{#adverts}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{ name}}</td>
                        <td>{{ subject }}</td>
                        <td>{{ comment }}</td>
                        <td>
                            <a href="/adverts/edit/{{id}}">Editar</a>
                        </td>
                    </tr>
                {{/adverts}}
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="/webjars/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>